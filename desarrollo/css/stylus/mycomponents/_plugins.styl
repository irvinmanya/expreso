@import 'nib'

vendor-prefixes = webkit moz ms o official
scale = 0 480px 768px 992px 1200px



//*****************************************************************//
//****************************************************************//
// ---------------> [ Menu animado ] <---------------- //
//**************************************************************//
//*************************************************************//
.menu-icon
	width 100%
	height 55px
	bloque ()
	margin auto
	position relative
	span
		position absolute
		top 50%
		left 50%
		transform translateX(-50%) translateY(-50%)
		display block
		width 22px
		height 2px
		background-color negro
		&:before
		&:after
			content ""
			background-color negro
			width 22px
			height 2px
			position absolute
			top 0
			left 0
			transform translateY(-6px)
			transition transform 0.5s
		&:after
			transform translateY(6px)
	&:hover
		span
			&:before
				transform translateY(-8px)
			&:after
				transform translateY(8px)

.menu-icon-arrow
	transition transform 0.5s
	svg
		fill transparent
		stroke-width 2px
		stroke negro
		stroke-dashArray 165
		stroke-dashOffset 165
		transition stroke-dashOffset 1s ease, fill 0.5s
	span
	span:before
	span:after
		transition background 0.5s, transform 0.5s, width 0.5s
		transform-origin 100% 100%
.isOpen
	transform rotate(-180deg)
	svg
		stroke-dashOffset 0
	span:before
		transform translateY(0) rotate(45deg)
	span:after
		transform translateY(0) rotate(-45deg)
	span:before
	span:after
		width 50%
		right 0px
		left auto
	&:hover
		span:before
			transform translateY(0) rotate(45deg)
		span:after
			transform translateY(0) rotate(-45deg)
		svg
			fill rgba(255, 255, 255, 0.1)

