//--------------> [ Mixin ]
bloque()
  display inline-block
  vertical-align top
  
cleaner()
  box-sizing border-box
  
nosombra()
  box-shadow 0px 0px 0px rgba(0,0,0,.0)

midAbs()
  position absolute
  top 0px
  left 0px
  right 0px
  bottom 0px
  margin auto

tam()
  width 100%
  height auto
  position relative
  bloque ()

befcont()
  content ''
  position absolute
  width 100%
  height 100%

trancicion()
  transition all 200ms ease-out 20ms

