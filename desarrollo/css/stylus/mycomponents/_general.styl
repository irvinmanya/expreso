// [ Copyright ] //---------->
.copyRight
	tam ()
	padding 20px 0px 10px 0px
	&:before
		content ''
		width 100%
		height 1px
		position absolute
		top 0px
		left 0px
		right 0px
		margin-left auto
		margin-right auto
		max-width 1300px
		background -moz-radial-gradient(center, ellipse cover, rgba(255,255,255,1) 0%, rgba(255,255,255,0.99) 1%, rgba(255,255,255,0) 68%, rgba(255,255,255,0) 100%)
		background -webkit-radial-gradient(center, ellipse cover, rgba(255,255,255,1) 0%,rgba(255,255,255,0.99) 1%,rgba(255,255,255,0) 68%,rgba(255,255,255,0) 100%)
		background radial-gradient(ellipse at center, rgba(255,255,255,1) 0%,rgba(255,255,255,0.99) 1%,rgba(255,255,255,0) 68%,rgba(255,255,255,0) 100%)
	.row
		margin-bottom 0px
	.linkTxt
		color blanco !important
		trancicion ()
		&:hover
		&:active
		&:focus
			text-decoration underline
			color blanco

.copyRightTxt
	text-align right
	color blanco

.copyManya
	text-align left
	color blanco

.manyaIco
	width 25px
	height auto
	bloque ()
	vertical-align middle
	margin-right 3px

// ---> [ Tablet ]
@media screen and (max-width: 992px)
	.copyRightTxt
		text-align center

	.copyManya
		text-align center

	.copyRightTxt
		text-align center
		line-height 120%

